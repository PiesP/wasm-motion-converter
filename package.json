{
  "name": "dropconvert-wasm",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=22.16.0",
    "pnpm": "^10.27.0"
  },
  "volta": {
    "node": "24.12.0",
    "pnpm": "10.27.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "scripts": {
    "dev": "vite",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "fmt": "biome format .",
    "fmt:fix": "biome format --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "licenses:generate": "tsx scripts/generate-third-party-licenses.ts",
    "prebuild": "pnpm -s licenses:generate && pnpm quality",
    "build": "vite build",
    "analyze": "vite build && echo '\nBundle analysis generated at dist/stats.html'",
    "preview": "vite preview",
    "clean": "rimraf dist node_modules/.vite",
    "quality": "pnpm -s fmt:fix && pnpm -s lint:fix && pnpm -s typecheck"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "comlink": "^4.4.2",
    "modern-gif": "^2.0.4",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "autoprefixer": "^10.4.23",
    "esbuild": "0.27.2",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-solid": "^2.11.10"
  }
}
